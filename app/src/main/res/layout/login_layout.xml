<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/mainLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign in to Fuelio-garage"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="10dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardError"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:background="#D95145"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Internet connection !"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#D95145"
                    android:textSize="18sp"/>

            </androidx.cardview.widget.CardView>
            <!-- A CardView that contains a TextView -->
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="#00000000"
                android:visibility="visible"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="bottom"
                    android:background="@null"
                    >


                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="30dp">
                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:visibility="visible"
                            android:background="@drawable/white_rounded"
                            card_view:ccp_showFlag="true"
                            card_view:ccp_showPhoneCode="true"
                            card_view:ccp_showNameCode="false"
                            android:layout_marginBottom="2dp"
                            app:ccp_textSize="14sp" />
                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:minHeight="30dp"
                            android:inputType="phone"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:textColorHint="#c2c2c2"
                            android:textColor="#000"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="10dp"
                            android:hint="phone number"
                            android:background="@drawable/white_rounded"
                            android:textSize ="16sp"
                            android:autofillHints="Auto fill phone" />
                    </LinearLayout>


                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnLogin"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        app:fb_text="Continue"
                        app:fb_textColor="@color/white"
                        app:fb_borderWidth="3dp"
                        app:fb_borderColor="#a4033f48"
                        app:fb_defaultColor="@color/colorPrimary"
                        app:fb_radius="5dp"
                        app:fb_focusColor="#FD002B1E"
                        android:layout_gravity="center"
                        android:layout_margin="15dp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- A CardView that contains a TextView -->
            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:visibility="gone"
                card_view:cardBackgroundColor="#00000000"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="0dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@null"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="5dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VERIFY PHONE"
                        android:layout_gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:text="Please enter a PIN we sent you via SMS or wait for auto-verify"
                        android:paddingBottom="5dp" />

                    <com.goodiebag.pinview.Pinview
                        android:id="@+id/pinView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:pinWidth="30dp"
                        app:pinHeight="30dp"
                        app:pinLength="6"
                        app:forceKeyboard="true"
                        app:cursorVisible="true"
                        app:hint="0"
                        app:inputType="number"
                        app:password="false"
                        android:layout_marginBottom="10dp"
                        card_view:pinBackground="@drawable/white_rounded" />

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                        />

                    <Button
                        android:id="@+id/resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:background="@null"
                        android:visibility="gone" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btnPassWord"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        app:fb_text="Verify"
                        app:fb_textColor="@color/white"
                        app:fb_borderWidth="3dp"
                        app:fb_borderColor="#a4033f48"
                        app:fb_defaultColor="@color/colorPrimary"
                        app:fb_radius="5dp"
                        app:fb_focusColor="#FD002B1E"
                        android:layout_gravity="center"
                        android:layout_margin="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="bottom"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/terms"
                    android:layout_gravity="bottom"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:textColorLink="@color/colorPrimary"
                    android:text="Enter your phone and continue"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
